<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorMySecondary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/welcome"
            android:layout_marginTop="80dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:textAlignment="center"
            android:textColor="@color/colorMy5"
            android:textSize="30sp"/>

        <Button
            android:id="@+id/interaction_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Interaction Blocks"
            android:padding="15dp"
            android:background="@drawable/custom_button"
            android:textColor="@color/colorMy6"
            android:layout_marginTop="50dp"
            android:layout_marginStart="30dp"
            android:layout_marginBottom="30dp"/>


        <ListView
            android:background="@color/colorMyPrimary"
            android:id="@+id/listView"
            android:theme="@style/MyFontStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"/>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>